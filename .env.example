# Environment variables for local development
# Copy to .env and add real values (never commit secrets)

# Database
DATABASE_URL=postgres://user:password@localhost:5432/ayebae

# Redis
REDIS_URL=redis://localhost:6379

# OAuth (Spotify/Hulu/etc.)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
HULU_CLIENT_ID=
HULU_CLIENT_SECRET=

# Stripe
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

# App settings
JWT_SECRET=replace_me
NODE_ENV=development

# Microservices Ports
AUTH_SERVICE_PORT=3001
MATCHING_SERVICE_PORT=3002
ROOM_SERVICE_PORT=3003
PAYMENTS_SERVICE_PORT=3004

# Service URLs (for service-to-service communication)
AUTH_SERVICE_URL=http://localhost:3001
MATCHING_SERVICE_URL=http://localhost:3002
ROOM_SERVICE_URL=http://localhost:3003
PAYMENTS_SERVICE_URL=http://localhost:3004

# CORS
CORS_ORIGIN=http://localhost:3000
